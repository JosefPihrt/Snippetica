<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>variable declaration</Title>
    <Shortcut>v</Shortcut>
    <Description> variable declaration</Description>
    <Author>Josef Pihrt</Author>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
    <Keywords>
      <Keyword>Meta-GenerateConstExprModifier</Keyword>
      <Keyword>Meta-GenerateConstModifier</Keyword>
      <Keyword>Meta-GenerateInlineModifier</Keyword>
      <Keyword>Meta-GenerateStaticModifier</Keyword>
    </Keywords>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>_identifier</ID>
        <ToolTip>Identifier name</ToolTip>
        <Default>x</Default>
      </Literal>
      <Literal Editable="false">
        <ID>_modifiers</ID>
        <ToolTip>Modifier(s)</ToolTip>
      </Literal>
      <Literal>
        <ID>_type</ID>
        <ToolTip>Variable type</ToolTip>
        <Default>auto</Default>
      </Literal>
      <Literal>
        <ID>_value</ID>
        <ToolTip>Value to assign</ToolTip>
        <Default>nullptr</Default>
      </Literal>
    </Declarations>
    <Code Language="Cpp"><![CDATA[$_modifiers$ $_type$ $_identifier$ = $_value$;$end$]]></Code>
  </Snippet>
</CodeSnippet>